@using SeedPacket
@using SeedPacket.Generators
@using WildHare.Extensions

@{ 
    var gen = new MultiGenerator(rulesSet: RulesSet.None);
    gen.Rules.AddCommonRules();
    var commonRules = gen.Rules;
}

<div class="code-scrolls-div top-margin"> 
    <span class="code-scrolls-span">&#8592 Table Scrolls &#8594</span>
</div>

<div id="rowResults" class="side-scroll">
    <table id="rules-common-table" class="table table-striped table-collapse">
        <thead>
            <tr>
                <th>Name</th>
                <th>Description</th>
                <th>If Type Is...</th>
                <th>If Propery Name Matches...</th>
            </tr>
        </thead>
        <tbody>
            @foreach (Rule rule in commonRules)
            {
                <tr>
                    <td>@rule.RuleName</td>
                    <td>@rule.Description</td>
                    <td>@rule.TypeMatch</td>
                    <td>@rule.NameMatch.IfNullOrEmpty("Any")</td>
                </tr>
            }
        </tbody>
    </table>
</div>
