@model List<User>

<div class="code-scrolls-div top-margin"> 
    <span class="code-scrolls-span">&#8592 Table Scrolls &#8594</span>
</div>
<div id="rowResults" class="side-scroll">
    <table id="home-simple-example-table" class="table table-striped table-collapse-sm">
        <thead>
            <tr>
                <th>UserId</th>
                <th>FirstName</th>
                <th>LastName</th>
                <th>Email</th>
                <th>Created</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var user in Model)
            {
                <tr>
                    <td>@user.UserId</td>
                    <td>@(!string.IsNullOrEmpty(user.FirstName) ? user.FirstName : "---")</td>
                    <td>@user.LastName</td>
                    <td>@user.Email</td>
                    <td>@user.Created.ToString("MM/dd/yyyy")</td>
                </tr>
            }
        </tbody>
    </table>
</div>





