<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - SeedPacket 2.0 for C#</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body><div class="mainContent">
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li class="@Html.ActiveToggle("Home","Index")">@Html.ActionLink("Home", "Index", "Home")</li>
                    <li class="@Html.ActiveToggle("Documentation","Index")">@Html.ActionLink("Documentation", "Index", "Documentation")</li>
                    <li class="@Html.ActiveToggle("Rules","Index")">@Html.ActionLink("Rules", "Index", "Rules")</li>
                    <li class="@Html.ActiveToggle("SimpleSeed","Index")">@Html.ActionLink("SimpleSeed", "Index", "SimpleSeed")</li>
                </ul>
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year Will Crowther - SeedPacket</p>
        </footer>
    </div>
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/bundles/ScriptApp")
    @RenderSection("scripts", required: false)
</div>
</body>
</html>
